                role_dropdown.config(font=("Segoe UI", 10), width=12)
                role_dropdown.pack(side="left", padx=10)

                def save_user(u=uname, rv=role_var_local):
                    # Update user role
                    for user_obj in users:
                        if user_obj["username"] == u:
                            user_obj["role"] = rv.get()
                            break
